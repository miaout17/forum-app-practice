<h2>Attachment</h2>

<% @attachments.each do |attachment| %>
  <p>You have successfully uploaded the image.</p>
  <p>Paste the following HTML code into your post: </p>
  <div>
  <%= "<img src='#{attachment.data.url}'/>" %>
  </div>
  <h3>Image Preview</h3>
  <%= image_tag(attachment.data.url) %>
  <script language="Javascript" type="text/javascript">
    window.opener.addAttachment(<%= "#{attachment.id}, '#{attachment.data.url}', '#{attachment.data.url(:thumb)}'" %>); 
  </script>
<% end %>
